<%= form_with(model: @sale, local: true) do |f| %>
  <%= f.label :cod, 'Código' %>
  <%= f.number_field :cod %>

  <%= f.label :detail, 'Detalle de venta' %>
  <%= f.text_area :detail %>

  <%= f.label :category, 'Categoría' %>
  <%= f.text_field :category %>

  <%= f.label :value, 'Valor' %>
  <%= f.number_field :value %>

  <%= f.label :discount, 'Descuento' %>
  <%= f.number_field :discount %>

<!-- CHECKBOX!!! -->
  <%= f.label :tax, 'Exento de IVA' %>
  <%= f.check_box :tax %>

  <%= f.submit "Enviar" %>
<% end %>
